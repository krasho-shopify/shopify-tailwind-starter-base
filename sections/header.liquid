<header role="banner" class="relative bg-black text-contrast dark:text-primary shadow-darkHeader hidden font-serif uppercase tracking-widest font-medium h-nav lg:flex items-center sticky transition duration-300 bg-black z-40 top-0 justify-between w-full leading-none gap-8 px-4 lg:px-6 py-0 max-h-[64px]">
  <button class="relative flex items-center justify-center w-8 h-8 focus:ring-primary/5" id="hamburguer_button">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" stroke="currentColor" class="w-5 h-5">
      <title>Menu</title>
      <line x1="3" y1="6.375" x2="17" y2="6.375" stroke-width="1.25"></line>
      <line x1="3" y1="10.375" x2="17" y2="10.375" stroke-width="1.25"></line>
      <line x1="3" y1="14.375" x2="17" y2="14.375" stroke-width="1.25"></line>
    </svg>
  </button>
  <div class="absolute top-[50%] right-[50%] translate-x-[50%] -translate-y-[50%] ">
    <a class="font-bold" href="/">
      <div class="flex items-center justify-center !text-md text-heading2 uppercase tracking-tight">
        <!--<img class="mr-2 !w-[30px]" src="https://www.datocms-assets.com/52824/1658777341-2021_c-bite-logo-white-1.svg" width="30" height="30" alt="Cookies" loading="lazy" decoding="async">SHOP-->
        
        {%- if section.settings.logo_cookies != blank -%}          
           {{ section.settings.logo_cookies | image_url: width: 100 | image_tag: alt: "Cookies" }}
        {%- else -%}
          <span class="h2">{{ shop.name }}</span>
        {%- endif -%}

      </div>
    </a>
  </div>
  <div class="flex items-center gap-1">
    <form action="/search" class="ml-4 flex items-center gap-2">
      <input type="search" name="q" class="bg-transparent hidden md:inline-block text-left lg:text-right border-b transition border-transparent -mb-px border-x-0 border-t-0 appearance-none px-0 py-1 focus:ring-transparent placeholder:opacity-20 placeholder:text-inherit focus:border-contrast/20 dark:focus:border-primary/20">
      <button type="submit" class="relative flex items-center justify-center w-8 h-8 focus:ring-primary/5">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
          <title>Search</title>
          <path fill-rule="evenodd" d="M13.3 8.52a4.77 4.77 0 1 1-9.55 0 4.77 4.77 0 0 1 9.55 0Zm-.98 4.68a6.02 6.02 0 1 1 .88-.88l4.3 4.3-.89.88-4.3-4.3Z"></path>
        </svg>
      </button>
    </form>
    <a class="relative flex items-center justify-center w-8 h-8 focus:ring-primary/5" href="/account/login">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
        <title>Account</title>
        <path fill-rule="evenodd" d="M9.9998 12.625c-1.9141 0-3.6628.698-5.0435 1.8611C3.895 13.2935 3.25 11.7221 3.25 10c0-3.728 3.022-6.75 6.75-6.75 3.7279 0 6.75 3.022 6.75 6.75 0 1.7222-.645 3.2937-1.7065 4.4863-1.3807-1.1632-3.1295-1.8613-5.0437-1.8613ZM10 18c-2.3556 0-4.4734-1.0181-5.9374-2.6382C2.7806 13.9431 2 12.0627 2 10c0-4.4183 3.5817-8 8-8s8 3.5817 8 8-3.5817 8-8 8Zm0-12.5c-1.567 0-2.75 1.394-2.75 3s1.183 3 2.75 3 2.75-1.394 2.75-3-1.183-3-2.75-3Z"></path>
      </svg>
    </a>
    <link rel="prefetch" as="fetch" href="#">
    <button class="relative flex items-center justify-center w-8 h-8 focus:ring-primary/5">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
        <title>Bag</title>
        <path fill-rule="evenodd" d="M8.125 5a1.875 1.875 0 0 1 3.75 0v.375h-3.75V5Zm-1.25.375V5a3.125 3.125 0 1 1 6.25 0v.375h3.5V15A2.625 2.625 0 0 1 14 17.625H6A2.625 2.625 0 0 1 3.375 15V5.375h3.5ZM4.625 15V6.625h10.75V15c0 .76-.616 1.375-1.375 1.375H6c-.76 0-1.375-.616-1.375-1.375Z"></path>
      </svg>
    </button>
  </div>
</header>

{%- render "nav", menu: section.settings.menu -%}
{%- render "sidebar", menu: section.settings.menu -%}

{% schema %}
{
  "name": "navigation-menu",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu"      
    },
    {
      "type": "link_list",
      "id": "sidebar_menu",
      "label": "Sidebar Menu"      
    },

    {
      "type": "image_picker",
      "id": "logo_cookies",
      "label": "Logo"      
    }    
  ]
}
{% endschema %}


