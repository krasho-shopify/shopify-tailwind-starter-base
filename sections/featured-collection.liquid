<div class="w-full flex justify-center">
  <section class="w-full gap-4 md:gap-6 grid py-6 md:py-8 lg:py-12 border-b border-skin-dark-soft">
    <h2 class="whitespace-pre-wrap max-w-prose font-bold text-4xl [&>span]:text-gray-400 [&>span]:text-lg px-6 md:px-8 lg:px-12">{{section.settings.featured_products_title}}</h2>
    <div class="grid grid-cols-2 px-6 sm:grid-cols-3 md:grid-cols-4 2xl:grid-cols-5 gap-4 md:scroll-px-8 lg:scroll-px-12 md:px-8 lg:px-12">
      {%- for product in section.settings.featured_collections.products -%}
           {%- render "cookies_product_card", product: product -%}
      {%- endfor -%}  

    </div>
  </section>
</div>

{% schema %}
{
  "name": "Featured Collection",
  "settings": [
    {
      "type": "collection",
      "id": "featured_collections",
      "label": "Featured Products"      
    },
    {
      "type": "text",
      "id": "featured_products_title",
      "label": "Featured Products Title",
      "default": "Featured Products"      
    }

  ],  
  "presets": [
      {
        "name": "Featured Collection"
      }
    ]    
}
{% endschema %}
